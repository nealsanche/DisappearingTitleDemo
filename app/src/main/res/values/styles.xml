    <style name="TextAppearance.Hero.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
